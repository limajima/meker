<body style="background-image: url(https://www.toptal.com/designers/subtlepatterns/patterns/double-bubble-outline.png);">
    <%- include ('./partials/navbar')%>
    <div style="text-align: center;margin-left: auto;margin-right: auto;">
        <h1>Patients List</h1>
    
        <form action="/patients/add">
            <button type="submit" class="btn btn-outline-success">Add Patient</button>
        </form>
    </div>

    <table class="table table-hover" style="width: 80%; margin-left: auto;margin-right: auto;border border-4">
        <thead class="border border-4">
            <tr class="border border-4">
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Comorbid</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(el => { %>
            <tr class="border border-4">
                    <td><%= el.id %></td>
                    <td><%= el.sayMyName() %></td>
                    <td><%= el.age %></td>
                    <td><%= el.comorbid %></td>
                    <form action="#">
                        <td><button formaction="patients/view/<%= el.id %>" class="btn btn-outline-success">View</button> <button class="btn btn-outline-success" onclick="return confirm('Are you sure want to remove <%= el.name%> from patients?')" type="submit"formaction="patients/delete/<%= el.id %>">Delete</button> </td>
                    </form>
                </tr>
            <% }) %>
        </tbody>
    </table>
